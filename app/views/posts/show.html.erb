<h1><%= @post.title %></h1>
<em><%= @post.content %></em>

<hr />

<h2>Comments:</h2>
<% @post.comments.each do |c| %>
    <%= c.content %>
    <br /><br />
<% end %>

<hr />

<h2>Users:</h2>
<% @post.users_that_commented.each do |u| %>
    <p>
        <%= link_to u.username, user_path(u) %>
    </p>
<% end %>






